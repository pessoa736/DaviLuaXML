{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "LuaXML",
  "scopeName": "source.luaxml",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#xml-self-closing" },
    { "include": "#xml-open-tag" },
    { "include": "#xml-close-tag" },
    { "include": "#xml-expression" },
    { "include": "#keywords" },
    { "include": "#function-definition" },
    { "include": "#function-call" },
    { "include": "#variables" },
    { "include": "#constants" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.lua",
          "begin": "--\\[=*\\[",
          "end": "\\]=*\\]",
          "captures": {
            "0": { "name": "punctuation.definition.comment.lua" }
          }
        },
        {
          "name": "comment.line.double-dash.lua",
          "match": "--.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.lua",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.lua",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.lua",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.lua",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.other.multiline.lua",
          "begin": "\\[=*\\[",
          "end": "\\]=*\\]"
        }
      ]
    },
    "xml-self-closing": {
      "comment": "Self-closing XML tag <Tag attr='value' />",
      "begin": "(<)([A-Z][a-zA-Z0-9_]*(?:\\.[a-zA-Z_][a-zA-Z0-9_]*)*)(?=\\s|/>)",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.tag.begin.xml" },
        "2": { "name": "entity.name.type.class.xml support.class.component.xml" }
      },
      "end": "(/>)",
      "endCaptures": {
        "1": { "name": "punctuation.definition.tag.end.xml" }
      },
      "patterns": [
        { "include": "#xml-attributes" }
      ]
    },
    "xml-open-tag": {
      "comment": "Opening XML tag <tag attr='value'>",
      "begin": "(<)([a-zA-Z_][a-zA-Z0-9_]*(?:\\.[a-zA-Z_][a-zA-Z0-9_]*)*)(?=\\s|>)",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.tag.begin.xml" },
        "2": { "name": "entity.name.tag.xml" }
      },
      "end": "(/?>)",
      "endCaptures": {
        "1": { "name": "punctuation.definition.tag.end.xml" }
      },
      "patterns": [
        { "include": "#xml-attributes" }
      ]
    },
    "xml-close-tag": {
      "comment": "Closing XML tag </tag>",
      "match": "(</)([a-zA-Z_][a-zA-Z0-9_]*(?:\\.[a-zA-Z_][a-zA-Z0-9_]*)*)(>)",
      "captures": {
        "1": { "name": "punctuation.definition.tag.begin.xml" },
        "2": { "name": "entity.name.tag.xml" },
        "3": { "name": "punctuation.definition.tag.end.xml" }
      }
    },
    "xml-expression": {
      "comment": "Lua expression in XML content {expr}",
      "begin": "(\\{)(?![\\[=])",
      "beginCaptures": {
        "1": { "name": "punctuation.section.embedded.begin.lua meta.brace.curly.lua" }
      },
      "end": "(\\})",
      "endCaptures": {
        "1": { "name": "punctuation.section.embedded.end.lua meta.brace.curly.lua" }
      },
      "contentName": "source.lua.embedded meta.embedded.expression.lua",
      "patterns": [
        { "include": "#strings" },
        { "include": "#keywords" },
        { "include": "#function-call" },
        { "include": "#variables" },
        { "include": "#constants" },
        { "include": "#operators" }
      ]
    },
    "xml-attributes": {
      "patterns": [
        {
          "comment": "Attribute with Lua expression value {expr}",
          "begin": "([a-zA-Z_][a-zA-Z0-9_:-]*)\\s*(=)\\s*(\\{)",
          "beginCaptures": {
            "1": { "name": "entity.other.attribute-name.xml" },
            "2": { "name": "punctuation.separator.key-value.xml" },
            "3": { "name": "punctuation.section.embedded.begin.lua meta.brace.curly.lua" }
          },
          "end": "(\\})",
          "endCaptures": {
            "1": { "name": "punctuation.section.embedded.end.lua meta.brace.curly.lua" }
          },
          "contentName": "source.lua.embedded meta.embedded.expression.lua",
          "patterns": [
            { "include": "#strings" },
            { "include": "#keywords" },
            { "include": "#function-call" },
            { "include": "#variables" },
            { "include": "#constants" },
            { "include": "#operators" }
          ]
        },
        {
          "comment": "Attribute with double-quoted string value",
          "match": "([a-zA-Z_][a-zA-Z0-9_:-]*)\\s*(=)\\s*(\"[^\"]*\")",
          "captures": {
            "1": { "name": "entity.other.attribute-name.xml" },
            "2": { "name": "punctuation.separator.key-value.xml" },
            "3": { "name": "string.quoted.double.xml" }
          }
        },
        {
          "comment": "Attribute with single-quoted string value",
          "match": "([a-zA-Z_][a-zA-Z0-9_:-]*)\\s*(=)\\s*('[^']*')",
          "captures": {
            "1": { "name": "entity.other.attribute-name.xml" },
            "2": { "name": "punctuation.separator.key-value.xml" },
            "3": { "name": "string.quoted.single.xml" }
          }
        },
        {
          "comment": "Boolean attribute (no value)",
          "match": "([a-zA-Z_][a-zA-Z0-9_:-]*)(?=\\s|/?>)",
          "captures": {
            "1": { "name": "entity.other.attribute-name.xml" }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.lua",
          "match": "\\b(and|break|do|else|elseif|end|for|function|goto|if|in|local|not|or|repeat|return|then|until|while)\\b"
        },
        {
          "name": "storage.modifier.lua",
          "match": "<(const|close)>"
        }
      ]
    },
    "function-definition": {
      "patterns": [
        {
          "comment": "Local function definition",
          "match": "\\b(local)\\s+(function)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.control.lua" },
            "2": { "name": "keyword.control.lua" },
            "3": { "name": "entity.name.function.lua" }
          }
        },
        {
          "comment": "Function definition with name",
          "match": "\\b(function)\\s+([a-zA-Z_][a-zA-Z0-9_]*(?:\\.[a-zA-Z_][a-zA-Z0-9_]*)*(?::[a-zA-Z_][a-zA-Z0-9_]*)?)",
          "captures": {
            "1": { "name": "keyword.control.lua" },
            "2": { "name": "entity.name.function.lua" }
          }
        }
      ]
    },
    "function-call": {
      "patterns": [
        {
          "comment": "Method call with :",
          "match": "(:)([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\(|\\{|\"|')",
          "captures": {
            "1": { "name": "punctuation.separator.method.lua" },
            "2": { "name": "entity.name.function.method.lua" }
          }
        },
        {
          "comment": "Function call",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.lua" }
          }
        },
        {
          "comment": "Lua built-in functions",
          "name": "support.function.lua",
          "match": "\\b(assert|collectgarbage|dofile|error|getmetatable|ipairs|load|loadfile|next|pairs|pcall|print|rawequal|rawget|rawlen|rawset|require|select|setmetatable|tonumber|tostring|type|xpcall)\\b"
        },
        {
          "comment": "Lua standard library",
          "name": "support.function.library.lua",
          "match": "\\b(coroutine|debug|io|math|os|package|string|table|utf8)\\.([a-zA-Z_][a-zA-Z0-9_]*)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.language.self.lua",
          "match": "\\bself\\b"
        },
        {
          "name": "variable.language.global.lua",
          "match": "\\b_G\\b"
        },
        {
          "name": "variable.language.vararg.lua",
          "match": "\\.\\.\\."
        },
        {
          "comment": "Variable assignment",
          "match": "\\b(local)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?==|,|<)",
          "captures": {
            "1": { "name": "keyword.control.lua" },
            "2": { "name": "variable.other.local.lua" }
          }
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.lua",
          "match": "\\b(true|false|nil)\\b"
        },
        {
          "name": "constant.numeric.hexadecimal.lua",
          "match": "\\b0[xX][0-9a-fA-F]+(?:\\.[0-9a-fA-F]*)?(?:[pP][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.float.lua",
          "match": "\\b[0-9]+\\.[0-9]*(?:[eE][+-]?[0-9]+)?\\b|\\b[0-9]+[eE][+-]?[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.lua",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.lua",
          "match": "\\+|-|\\*|/|//|%|\\^"
        },
        {
          "name": "keyword.operator.comparison.lua",
          "match": "==|~=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.lua",
          "match": "="
        },
        {
          "name": "keyword.operator.concatenation.lua",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.length.lua",
          "match": "#"
        },
        {
          "name": "punctuation.separator.lua",
          "match": ";|:|,"
        }
      ]
    }
  }
}
