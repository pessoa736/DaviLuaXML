{
  "name": "daviluaxml",
  "displayName": "Davi System Lua XML",
  "description": "Syntax highlighting, IntelliSense and formatting for .dslx files (Davi System Lua XML)",
  "version": "0.2.0",
  "publisher": "pessoa736",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/pessoa736/DaviLuaXML"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Snippets"
  ],
  "keywords": [
    "lua",
    "xml",
    "jsx",
    "dslx",
    "daviluaxml",
    "syntax highlighting"
  ],
  "activationEvents": [
    "onLanguage:luaxml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "luaxml",
        "aliases": [
          "LuaXML",
          "luaxml",
          "lx"
        ],
        "extensions": [
          ".dslx"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/lx-light.png",
          "dark": "./icons/lx-dark.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "luaxml",
        "scopeName": "source.luaxml",
        "path": "./syntaxes/luaxml.tmLanguage.json",
        "embeddedLanguages": {
          "source.lua.embedded": "lua"
        }
      }
    ],
    "snippets": [
      {
        "language": "luaxml",
        "path": "./snippets/luaxml.code-snippets"
      }
    ],
    "commands": [
      {
        "command": "daviluaxml.formatDocument",
        "title": "Format LuaXML Document"
      },
      {
        "command": "daviluaxml.showTags",
        "title": "DaviLuaXML: Show All Tags in File"
      }
    ],
    "configuration": {
      "title": "DaviLuaXML",
      "properties": {
        "daviluaxml.indentSize": {
          "type": "number",
          "default": 2,
          "description": "Number of spaces for indentation"
        },
        "daviluaxml.useTabs": {
          "type": "boolean",
          "default": false,
          "description": "Use tabs instead of spaces"
        },
        "daviluaxml.enableTagSuggestions": {
          "type": "boolean",
          "default": true,
          "description": "Enable XML tag suggestions based on defined functions"
        },
        "daviluaxml.enableVariableSuggestions": {
          "type": "boolean",
          "default": true,
          "description": "Enable Lua variable suggestions"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  }
}
